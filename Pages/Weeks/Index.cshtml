@page
@model STMWeb.Pages.Weeks.IndexModel
@{
    ViewData["Title"] = "STUDENT TIME MANAGER";
}

@if(Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<br>
<h1>&#x1F5D3;</h1>
<h2>HOURS OF SELF-STUDY REMAINING</h2>
<a class='btn btn-primary btn-sm' href='/Weeks/Create'>Add Week Info</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>SEMESTER #</th>
            <th>MODULE CODE</th>
            <th>HOURS SPENT STUDYING</th>
            <th>START DATE</th>
            <th>HOURS OF SELF-STUDY</th>
            <th>HOURS OF SELF-STUDY REMAINING</th>
        </tr>
    </thead>    
    <tbody>
        @foreach(var week in Model.weeks)
        {
            <tr>
                <td>@week.Id</td>
                <td>@week.semesterNum</td>
                <td>@week.code</td>
                <td>@week.hoursSpent</td>
                <td>@week.startDate</td>
                <td>@week.selfStudyHours</td>
                <td>@week.remainingSelfStudyHours</td>
            </tr>
        }
    </tbody>
</table>
