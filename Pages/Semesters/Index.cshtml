@page
@model STMWeb.Pages.Semesters.IndexModel
@{
    ViewData["Title"] = "STUDENT TIME MANAGER";
}

@if(Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<br>
<h1>&#x1F4DA;</h1>
<h2>SEMESTER LIST</h2>
<a class='btn btn-primary btn-sm' href='/Semesters/Create'>New Semester</a>

<table class="table">
    <thead>
        <tr>
            <th>SEMESTER #</th>
            <th>NUMBER OF WEEKS</th>
            <th>START DATE</th>
        </tr>
    </thead>    
    <tbody>
        @foreach(var semester in Model.semesters)
        {
            <tr>
                <td>@semester.semesterId</td>
                <td>@semester.numberOfWeeks</td>
                <td>@semester.startDate</td>
            </tr>
        }
    </tbody>
</table>